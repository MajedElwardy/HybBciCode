<scenario class="struct">
    <description>Oddball experiment</description>

    <!-- Desired parameter values section -->
    <desired class="struct">
        <scr class="struct">
            <nCols class="double">1920</nCols>
            <nRows class="double">1200</nRows>
        </scr>
    </desired>

    <!-- Textures section -->
    <textures class="struct">
        <filename>frequent-stimulus.png</filename>
        <filename>rare-stimulus.png</filename>
    </textures>

    <!-- Events section -->
	<events class="struct">
		<desc>start event</desc>        <id class="double">1</id>
		<desc>end event</desc>          <id class="double">-1</id>
		<desc>frequent on</desc>        <id class="double">2</id>
		<desc>frequent off</desc>       <id class="double">-2</id>
		<desc>rare on</desc>            <id class="double">4</id>
		<desc>rare off</desc>           <id class="double">-4</id>
    </events>
    <iStartEvent class="double">1</iStartEvent>
    <iEndEvent class="double">2</iEndEvent>
    <frameBasedEventIdAdjust class="double">0</frameBasedEventIdAdjust>
    <issueFrameBasedEvents class="logical">1</issueFrameBasedEvents>
    <issueTimeBasedEvents class="logical">0</issueTimeBasedEvents>
    <correctStimulusAppearanceTime class="logical">1</correctStimulusAppearanceTime>
    <useBinaryIntensity class="logical">0</useBinaryIntensity>

    <!-- Stimuli section -->
    <stimuli class="struct">
        <!-- frequent stimulus -->
        <description>frequent stimulus</description>
        <stateSequence class="double">1 2 1 2</stateSequence>
        <durationSequenceInSec class="double">1</durationSequenceInSec>
        <desired class="struct">
            <position class="double">661 301 1260 900</position>
        </desired>
        <states class="struct">
            <views class="struct">
                <iTexture class="double">1</iTexture>
            </views>
            <views class="struct">
                <iTexture class="double">0</iTexture>
            </views>
        </states>
        <eventMatrix class="double" size="2 2">0 3 4 0</eventMatrix>

        <!-- rare stimulus -->
        <description>rare stimulus</description>
        <stateSequence class="double">1 2 1 2</stateSequence>
        <durationSequenceInSec class="double">1</durationSequenceInSec>
        <desired class="struct">
            <position class="double">661 301 1260 900</position>
        </desired>
        <states class="struct">
            <views class="struct">
                <iTexture class="double">2</iTexture>
            </views>
            <views class="struct">
                <iTexture class="double">0</iTexture>
            </views>
        </states>
        <eventMatrix class="double" size="2 2">0 5 6 0</eventMatrix>

    </stimuli>

</scenario>
